@model IEnumerable<CapaModeloRBS.tbListaDeVerificacion>
@{
    ViewBag.Title = "Listas Verificacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Inicio</a></li>
        <li class="breadcrumb-item active" aria-current="page">Detalle Lista Verificación</li>
    </ol>
</nav>

<div class="row">
    <div class="col-sm-12">
        <div class="card border-info">
            <div class="card-header bg-info text-white">
                Listas de Verificación
            </div>
            <div class="card-body">
                <div class="row mt-3">
                    <div class="col-sm-12">
                        <table id="tbdata" class="table table-striped table-bordered nowrap compact" style="width:100%">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre</th>
                                    <th>Descripcion</th>                                   
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.ListaID)</td>
                                        <td><a href="@Url.Action("ListaRespuestas", "Planificacion", new {listaID = @item.ListaID })">@Html.DisplayFor(modelItem => item.Nombre)</a> </td>
                                        <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

