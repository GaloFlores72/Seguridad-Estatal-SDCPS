
@{
    ViewBag.Title = "CrearSubtitulos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Inicio</a></li>
        <li class="breadcrumb-item active" aria-current="page">Subtítulo</li>
    </ol>
</nav>

<div class="row">
    <div class="col-sm-12">
        <div class="card border-info">
            <div class="card-header bg-info text-white">
                Subtítulo
            </div>
            <div class="card-body">
                <div class="row ">
                    <div class="col-sm-4">
                        <label for="ddlListas">Seleccionar Lista de Verificacion:</label>
                        <select id="ddlListas" class="form-control form-control-sm">
                            <option value="">-- Seleccione una lista --</option>
                        </select>
                    </div>
                </div>
            </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-4">
                            <button id="btnNuevo" type="button" class="btn btn-sm btn-success" onclick="abrirPopUpForm(null)"> <i class="fa fa-plus" aria-hidden="true"></i> Agregar Nuevo</button>
                        </div>
                    </div>
                    <hr />
                    <div class="row mt-3">
                        <div class="col-sm-12">
                            <table id="tbdata" class="table table-striped table-bordered nowrap compact" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>LISTAS DE VERIFICACION</th>
                                        <th>SUBTÍTULOS</th>
                                        <th>ESTADO</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="exampleModalLabel">Subtítulo </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form">
                    <input id="txtid" class="model" value="0" type="hidden" />
                    <div class="form-group">
                        <label for="txtListaNombre" class="col-form-label">Lista de Verificacion: <span class="error"></span></label>
                        <input type="text" class="form-control form-control-sm model text-uppercase required" id="txtListaNombre" name="ListaNombre">
                    </div>
                    <div class="form-group">
                        <label for="txtListaID" class="col-form-label" hidden="hidden">Lista ID: <span class="error" ></span></label>
                        <input type="text" class="form-control form-control-sm model text-uppercase required" id="txtListaID" name="ListaID" hidden="hidden">
                    </div>
                    <div class="form-group">
                        <label for="txtNombre" class="col-form-label">Nombre de Subtitulo: <span class="error"></span></label>
                        <input type="text" class="form-control form-control-sm model text-uppercase required" id="txtNombre" name="Nombre">
                    </div>
                    <div class="form-group">
                        <label for="txtDescripcion" class="col-form-label">Descripcion de Subtitulo: <span class="error"></span></label>
                        <input type="text" class="form-control form-control-sm model text-uppercase required" id="txtDescripcion" name="Descripcion">
                    </div>
                    <div class="form-group">
                        <label for="cboEstado" class="col-form-label">Estado:</label>
                        <select class="form-control form-control-sm model" id="cboEstado" name="Estado">
                            <option value="1">Activo</option>
                            <option value="0">No Activo</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Cerrar</button>
                <button id="btnGuardar" type="button" class="btn btn-sm btn-primary" onclick="Guardar()">Guardar</button>

            </div>
        </div>
    </div>
</div>

<!-- Referencia al archivo JavaScript -->
@section scripts{
    <script src="@Url.Content("~/Scripts/Views/Subtitulo_Crear.js")" type="text/javascript"></script>
}