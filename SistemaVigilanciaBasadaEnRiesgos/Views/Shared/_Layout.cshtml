@using SistemaVigilanciaBasadaEnRiesgos.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1" />
    <meta charset="utf-8" />
    <meta http-equiv="Expires" content="0">
    <meta http-equiv="Last-Modified" content="0">
    <meta http-equiv="Cache-Control" content="no-cache, mustrevalidate">
    <meta http-equiv="Pragma" content="no-cache">

    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/imganes/logo2.jpg" />
    <title>@ViewBag.Title - RBS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/PluginsCSS")
    @RenderSection("estilos", required: false)
</head>
<body class="hold-transition sidebar-mini pace-primary layout-navbar-fixed">
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><img src="~/Content/assets/imganes/align.png" /> </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <p class="nav-link">
                        Dirección General de Aviciación Civil del Ecuador
                    </p>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-muted waves-effect waves-dark" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <img src="~/Content/imganes/user.png" style="width:30px" alt="user" class="profile-pic" />
                        @if (Session["name"] != null)
                        {
                            <span>@Session["name"].ToString()</span>
                        }

                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <a href="#" class="dropdown-item">
                            <!-- Message Start -->
                            <div class="media">
                                <img src="~/Content/imganes/user.png" alt="User" style="width:30px" class="img-size-50 mr-3 img-circle">
                                <div class="media-body">
                                    <h3 class="dropdown-item-title">
                                        @if (Session["name"] != null)
                                        {
                                            <p class="text-sm"> @Session["name"].ToString() </p>
                                        }
                                    </h3>

                                    @if (Session["correo"] != null)
                                    {
                                        <p class="text-sm">@Session["correo"].ToString()</p>
                                    }
                                </div>
                            </div>
                            <!-- Message End -->
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="@Url.Action("Salir", "Home")" class="dropdown-item">
                            <!-- Message Start -->
                            <div class="media">
                                <img src="~/Content/imganes/power.png" alt="User" style="width:30px" class=" mr-3 img-circle">
                                <div class="media-body">
                                    <h3 class="dropdown-item-title">
                                        Cerrar sesión
                                    </h3>
                                </div>
                            </div>
                            <!-- Message End -->
                        </a>
                    </div>
                </li>
            </ul>

        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-secondary elevation-4">
            <!-- Brand Logo -->
            <a href="#" class="brand-link">
                <img src="~/Content/imganes/logo2.jpg" alt="Dirección General Aviación Civil - Ecuador" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light form-control-sm">DGAC</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user (optional) -->
                @if (Session["correo"] != null)
                {
                    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                        <div class="info form-control-sm">
                            <a class="d-block">@Session["correo"].ToString()</a>

                        </div>
                    </div>
                }

                <!-- Sidebar Menu -->
                    <nav class="mt-2">
                        @Html.Partial("_MenuBar")                       
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item">
                                <a href="@Url.Action("Salir", "Home")" class="nav-link">
                                    <i class="fas fa-sign-out-alt"></i>
                                    <span>
                                        <strong>Salir</strong>
                                    </span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content">
                <br />
                @RenderBody()
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> 0.1.
            </div>
            <strong>Derechos de autor &copy; 2025 <a href="https://www.aviacioncivil.gob.ec/">Dirección Aviación Civil-DGAC</a>.</strong> Reservados todos los derechos.
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Content/PluginsJS")

    <script type="text/javascript">

        $.extend({ MisUrls: { url: {}, urls: function (a) { $.extend($.MisUrls.url, a); } } });        
        //lenguaje español datatable
        $.MisUrls.urls({ Url_datatable_spanish: '@Url.Content("~/Content/plugins/datatables-bs4/css/datatable_spanish.json")' });

        //CONTROLADOR ROL
        $.MisUrls.urls({ _ObtenerRoles: '@Url.Action("ObtenerRol", "Rol")' });
        $.MisUrls.urls({ _GuardarRol: '@Url.Action("Guardar", "Rol")' });
        $.MisUrls.urls({ _EliminarRol: '@Url.Action("Eliminar", "Rol")' });
                
           //CONTROLADOR PERMISOS
        $.MisUrls.urls({ _ObtenerPermisos: '@Url.Action("Obtener", "Permisos")' });
        $.MisUrls.urls({ _GuardarPermisos: '@Url.Action("Guardar", "Permisos")' });


        //CONTROLADOR USUARIO
        $.MisUrls.urls({ _ObtenerUsuarios: '@Url.Action("Obtener", "Usuario")' });
        $.MisUrls.urls({ _GuardarUsuario: '@Url.Action("Guardar", "Usuario")' });
        $.MisUrls.urls({ _EliminarUsuario: '@Url.Action("Eliminar", "Usuario")' });

        //LISTA DE VERIFICACION       
        $.MisUrls.urls({ _ObtenerListaVerificacionTodos: '@Url.Action("ObtenerListaVerificacionTodos", "ListaVerificacion")' });
        $.MisUrls.urls({ _GuardarListaVerificacion: '@Url.Action("GuardarListaVerificacion", "ListaVerificacion")' });
        $.MisUrls.urls({ _EliminarListaVerificacion: '@Url.Action("EliminarListaVerificacion", "ListaVerificacion")' });

         //SUBTITULOS
        $.MisUrls.urls({ _ObtenerSubtituloTodos: '@Url.Action("ObtenerSubtituloTodos", "Subtitulo")' });
        $.MisUrls.urls({ _ObtenerSubtitulosPorListaId: '@Url.Action("ObtenerSubtitulosPorListaId", "Subtitulo")' });
        $.MisUrls.urls({ _GuardarSubtitulo: '@Url.Action("GuardarSubtitulo", "Subtitulo")' });
        $.MisUrls.urls({ _EliminarSubtitulo: '@Url.Action("EliminarSubtitulo", "Subtitulo")' });

        //PREGUNTAS
        $.MisUrls.urls({ _ObtenerPreguntas: '@Url.Action("ObtenerPreguntas", "Pregunta")' });
        $.MisUrls.urls({ _ObtenerPreguntasPorSubtitulo: '@Url.Action("ObtenerPreguntasPorSubtitulo", "Pregunta")' });
        $.MisUrls.urls({ _GuardarPregunta: '@Url.Action("GuardarPregunta", "Pregunta")' });
        $.MisUrls.urls({ _EliminarPregunta: '@Url.Action("EliminarPregunta", "Pregunta")' });

        //ORIENTACIONES
        $.MisUrls.urls({ _ObtenerOrientacion: '@Url.Action("ObtenerOrientacion", "Orientaciones")' });
        $.MisUrls.urls({ _ObtenerOrientacionesPorIdPregunta: '@Url.Action("ObtenerOrientacionesPorIdPregunta", "Orientaciones")' });
        $.MisUrls.urls({ _GuardarOrientacion: '@Url.Action("GuardarOrientacion", "Orientaciones")' });
        $.MisUrls.urls({ _EliminarOrientacion: '@Url.Action("EliminarOrientacion", "Orientaciones")' });

        //ORIENTACIONES ESTADOS
        $.MisUrls.urls({ _ObtenerOrientacionEstadosTodos: '@Url.Action("ObtenerOrientacionEstadosTodos", "OrientacionEstado")' });
        $.MisUrls.urls({ _ObtenerOrientacionEstadoPorOrientacionID: '@Url.Action("ObtenerOrientacionEstadoPorOrientacionID", "OrientacionEstado")' });
        $.MisUrls.urls({ _GuardarOrientacionEstado: '@Url.Action("GuardarOrientacionEstado", "OrientacionEstado")' });


        //RESPUESTA
        $.MisUrls.urls({ _GuardarEncabezadoRespuesta: '@Url.Action("GuardarEncabezadoRespuesta", "Planificacion")' });


        //PLANIFIOCACION
        $.MisUrls.urls({ _ObtieneTipoProveedorServicioPorOid: '@Url.Action("ObtieneTipoProveedorServicioPorOid", "Planificacion")' });
         $.MisUrls.urls({ _ObtieneOrganizacionPorOid: '@Url.Action("ObtieneOrganizacionPorOid", "Planificacion")' });
        
        //proveedor de servicios        
        $.MisUrls.urls({ _ObtenerTipoProveedorServicio: '@Url.Action("ObtenerTipoProveedorServicio", "TipoProveedorServicio")' });



        function nobackbutton() {
            window.location.hash = "no-back-button";
            window.location.hash = "Again-No-back-button";//esta linea es necesaria para chrome
            window.onhashchange = function () { window.location.hash = "no-back-button"; }
        }
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>